{
  "name": "r2-starter-kit",
  "version": "2.0.0",
  "description": "R^2 Starter Kit is an boilerplate for web development built on top of React, Redux and Webpack 4.",
  "engines": {
    "node": "10",
    "npm": "^5.6.x",
    "yarn": "^1.3.2"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --config webpack.config.dev.js",
    "build": "rm -rf www/*.*.js && cross-env NODE_ENV=production webpack -p --config webpack.config.prod.js",
    "e2e": "testcafe chrome tests/e2e.js",
    "test": "cross-env NODE_ENV=test NODE_PATH=./src jest",
    "test:cov": "cross-env NODE_ENV=test NODE_PATH=./src jest --coverage",
    "test:upd": "cross-env NODE_ENV=test NODE_PATH=./src jest --updateSnapshot",
    "lint": "eslint $(find src tests -name \\*.jsx)",
    "precommit": "yarn lint",
    "prepush": "yarn test",
    "postinstall": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tpai/r2-starter-kit.git"
  },
  "bugs": {
    "url": "https://github.com/tpai/r2-starter-kit/issues"
  },
  "author": "tonypai <tony77794@gmail.com> (http://github.com/tpai)",
  "license": "ISC",
  "dependencies": {
    "express": "^4.16.2",
    "express-history-api-fallback": "^2.2.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.3",
    "react-router-dom": "^4.0.0",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "styled-components": "^3.2.3"
  },
  "devDependencies": {
    "autoprefixer": "^8.0.0",
    "babel-cli": "^6.8.0",
    "babel-core": "^6.10.4",
    "babel-eslint": "^8.0.0",
    "babel-jest": "^22.0.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-rewire": "^1.0.0-rc-1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.0.0",
    "css-loader": "^0.28.0",
    "cz-conventional-changelog": "^2.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.0",
    "eslint": "^4.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-react": "^7.0.0",
    "expect": "^22.0.0",
    "html-webpack-plugin": "^3.0.4",
    "husky": "^0.14.0",
    "isomorphic-fetch": "^2.2.1",
    "jasmine-reporters": "^2.3.0",
    "jest": "^22.0.0",
    "nock": "^9.1.6",
    "node-sass": "^4.5.0",
    "object.reduce": "^1.0.1",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.0",
    "raf": "^3.4.0",
    "redux-logger": "^3.0.0",
    "redux-mock-store": "^1.4.0",
    "sass-loader": "^7.0.0",
    "style-loader": "^0.21.0",
    "testcafe": "^0.20.0",
    "webpack": "^4.0.1",
    "webpack-cli": "^2.0.10",
    "webpack-dev-server": "^3.1.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/**/*.{js,jsx}",
      "src/redux/modules/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}
